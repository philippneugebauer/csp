<% content_for :title, "Editing customer" %>

<div class="container py-4">
  <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
    <h1 class="h2 mb-0">Editing customer</h1>
    <div class="d-flex flex-wrap gap-2">
      <%= link_to customers_path, class: "btn btn-outline-secondary" do %>
        <i class="bi bi-arrow-left me-1"></i>Back to index
      <% end %>
      <%= link_to @customer, class: "btn btn-outline-primary" do %>
        <i class="bi bi-eye me-1"></i>Show
      <% end %>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <%= render "form", customer: @customer %>
    </div>
  </div>
</div>
