<% content_for :title, "Customers" %>

<div class="container py-4">
  <% if notice.present? %>
    <div class="alert alert-success" role="alert"><%= notice %></div>
  <% end %>

  <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
    <h1 class="h2 mb-0">Customers</h1>
    <%= link_to new_customer_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-lg me-1"></i>New customer
    <% end %>
  </div>

  <div class="card shadow-sm mb-3">
    <div class="card-body">
      <%= form_with url: customers_path, method: :get do |form| %>
        <div class="row g-2">
          <div class="col-md-3">
            <%= form.text_field :name, value: @name_query, class: "form-control", placeholder: "Filter by customer name" %>
          </div>
          <div class="col-md-3">
            <%= form.collection_select :customer_success_manager_id,
              @customer_success_managers,
              :id,
              :full_name,
              { include_blank: "All CSMs", selected: @customer_success_manager_id },
              { class: "form-select" } %>
          </div>
          <div class="col-md-2">
            <%= form.select :stage,
              options_for_select(Customer.stages.keys.map { |value| [ value.humanize, value ] }, @stage_filter),
              { include_blank: "All stages" },
              { class: "form-select" } %>
          </div>
          <div class="col-md-2">
            <%= form.select :churn_risk,
              options_for_select(Customer.churn_risks.keys.map { |value| [ value.humanize, value ] }, @churn_risk_filter),
              { include_blank: "All risks" },
              { class: "form-select" } %>
          </div>
          <div class="col-md-2 d-flex gap-2">
            <%= form.submit "Filter", class: "btn btn-primary w-100" %>
            <%= link_to "Reset", customers_path, class: "btn btn-outline-secondary w-100" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="card shadow-sm overflow-hidden">
    <% if @customers.any? %>
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th scope="col">Customer</th>
              <th scope="col">Org ID</th>
              <th scope="col">Segment</th>
              <th scope="col">Stage</th>
              <th scope="col">Churn risk</th>
              <th scope="col">CSM</th>
              <th scope="col" class="text-end"></th>
            </tr>
          </thead>
          <tbody id="customers">
            <% @customers.each do |customer| %>
              <tr id="<%= dom_id customer %>">
                <td>
                  <div class="fw-semibold"><%= customer.name %></div>
                </td>
                <td><%= customer.organization_id.presence || "-" %></td>
                <td><span class="badge text-bg-dark"><%= customer.customer_segment_label %></span></td>
                <td>
                  <span class="badge text-bg-secondary"><%= customer.stage.humanize %></span>
                </td>
                <td>
                  <% risk_badge_class = customer.high? ? "text-bg-danger" : customer.medium? ? "text-bg-warning" : "text-bg-success" %>
                  <span class="badge <%= risk_badge_class %>"><%= customer.churn_risk.humanize %></span>
                </td>
                <td>
                  <%= customer.customer_success_manager.full_name %>
                </td>
                <td class="text-end">
                  <div class="btn-group btn-group-sm" role="group" aria-label="Customer actions">
                    <%= link_to customer, class: "btn btn-outline-primary" do %>
                      <i class="bi bi-eye me-1"></i>Show
                    <% end %>
                    <%= link_to edit_customer_path(customer), class: "btn btn-outline-warning" do %>
                      <i class="bi bi-pencil-square me-1"></i>Edit
                    <% end %>
                    <%= link_to customer, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger" do %>
                      <i class="bi bi-trash me-1"></i>Delete
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="p-4 text-center text-body-secondary">
        No customers found.
      </div>
    <% end %>
  </div>
</div>
