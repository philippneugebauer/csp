<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Csp" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="application-name" content="Csp">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if authenticated? %>
      <nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom mb-3">
        <div class="container">
          <%= link_to "CSP", root_path, class: "navbar-brand fw-semibold" %>
          <ul class="navbar-nav ms-2">
            <li class="nav-item">
              <%= link_to "Customers", customers_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Customer Success Managers", customer_success_managers_path, class: "nav-link" %>
            </li>
          </ul>
          <div class="d-flex align-items-center gap-2 ms-auto">
            <span class="text-body-secondary small"><%= current_customer_success_manager.full_name %></span>
            <%= button_to "Logout", logout_path, method: :delete, class: "btn btn-sm btn-outline-secondary" %>
          </div>
        </div>
      </nav>
    <% end %>

    <div class="container">
      <% if notice.present? %>
        <div class="alert alert-success" role="alert"><%= notice %></div>
      <% end %>
      <% if alert.present? %>
        <div class="alert alert-danger" role="alert"><%= alert %></div>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
