<% content_for :title, "Customer success manager" %>

<div class="container py-4">
  <% if notice.present? %>
    <div class="alert alert-success" role="alert"><%= notice %></div>
  <% end %>

  <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
    <h1 class="h2 mb-0">Customer success manager</h1>
    <div class="d-flex flex-wrap gap-2">
      <%= link_to customer_success_managers_path, class: "btn btn-outline-primary" do %>
        <i class="bi bi-arrow-left me-1"></i>Back to index
      <% end %>
      <%= link_to edit_customer_success_manager_path(@customer_success_manager), class: "btn btn-warning" do %>
        <i class="bi bi-pencil-square me-1"></i>Edit
      <% end %>
      <%= button_to @customer_success_manager, method: :delete, class: "btn btn-danger", form: { class: "d-inline" } do %>
        <i class="bi bi-trash me-1"></i>Delete
      <% end %>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <%= render @customer_success_manager %>
    </div>
  </div>
</div>
