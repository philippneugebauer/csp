<% content_for :title, "Customer success managers" %>

<div class="container py-4">
  <% if notice.present? %>
    <div class="alert alert-success" role="alert"><%= notice %></div>
  <% end %>

  <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
    <h1 class="h2 mb-0">Customer success managers</h1>
    <%= link_to new_customer_success_manager_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-lg me-1"></i>New customer success manager
    <% end %>
  </div>

  <div class="card shadow-sm overflow-hidden">
    <% if @customer_success_managers.any? %>
      <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th scope="col">First name</th>
                <th scope="col">Last name</th>
                <th scope="col">Email</th>
                <th scope="col" class="text-end"></th>
              </tr>
            </thead>
            <tbody id="customer_success_managers">
              <% @customer_success_managers.each do |customer_success_manager| %>
                <tr id="<%= dom_id customer_success_manager %>">
                  <td>
                    <%= customer_success_manager.first_name %>
                  </td>
                  <td>
                    <%= customer_success_manager.last_name %>
                  </td>
                  <td>
                    <%= customer_success_manager.email %>
                  </td>
                  <td class="text-end">
                    <div class="btn-group btn-group-sm" role="group" aria-label="Customer success manager actions">
                      <%= link_to customer_success_manager, class: "btn btn-outline-primary" do %>
                        <i class="bi bi-eye me-1"></i>Show
                      <% end %>
                      <%= link_to edit_customer_success_manager_path(customer_success_manager), class: "btn btn-outline-warning" do %>
                        <i class="bi bi-pencil-square me-1"></i>Edit
                      <% end %>
                      <%= link_to customer_success_manager, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger" do %>
                        <i class="bi bi-trash me-1"></i>Delete
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    <% else %>
      <div class="p-4 text-center text-body-secondary">
        No customer success managers found.
      </div>
    <% end %>
  </div>
</div>
